{
  "version": 2,
  "installCommand": "npm install && cd client && npm install",
  "buildCommand": "cd client && npm run build",
  "functions": {
    "server.js": {
      "includeFiles": "client/build/**"
    }
  },
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}
